{
  "name": "blinko-monorepo",
  "version": "1.2.2",
  "private": true,
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "dev": "npm --workspace app run tauri:dev",
    "build:web": "npm --workspace server run build:web && npm --workspace app run build:web",
    "test": "echo \"No tests configured\"",
    "start": "npm --workspace server run start",
    "clean": "rm -rf node_modules app/node_modules server/node_modules",
    "dev:backend": "dotenv npm --workspace server run dev",
    "dev:frontend": "dotenv npm --workspace app run dev",
    "postinstall": "npm run prisma:generate",
    "setup": "npm install",
    "prisma:generate": "cd prisma && prisma generate",
    "prisma:migrate:dev": "cd prisma && prisma migrate dev",
    "prisma:migrate:deploy": "cd prisma && prisma migrate deploy",
    "prisma:studio": "cd prisma && prisma studio",
    "build:seed": "tsup prisma/seed.ts --outDir dist",
    "seed": "node dist/seed.js",
    "build:blinko:types": "tsc -p tsconfig.blinko.json"
  },
  "devDependencies": {
    "@types/lru-cache": "^7.10.10",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@tauri-apps/plugin-process": "^2.2.1",
    "@tauri-apps/plugin-updater": "^2.7.1",
    "dotenv": "^16.5.0",
    "lru-cache": "^11.1.0",
    "react-i18next": "^15.4.1",
    "react-simple-pull-to-refresh": "^1.3.3",
    "wait-on": "^8.0.3"
  }
}
